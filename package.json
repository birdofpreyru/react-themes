{
  "name": "@dr.pogodin/react-themes",
  "version": "1.4.0",
  "description": "UI theme composition with CSS Modules and React",
  "exports": {
    "module": "./build/module/index.js",
    "node": "./build/node/index.js"
  },
  "scripts": {
    "build": "rimraf build && npm run build:module && npm run build:node",
    "build:module": "rimraf build/module && babel src --out-dir build/module --source-maps --config-file ./babel-module.config.js",
    "build:node": "rimraf build/node && babel src --out-dir build/node --source-maps",
    "jest": "jest --config jest/config.json",
    "lint": "eslint --ext .js,.jsx .",
    "test": "npm run lint && npm run jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birdofpreyru/react-themes.git"
  },
  "keywords": [
    "React",
    "ReactJS",
    "JS",
    "JavaSript",
    "UI",
    "theme",
    "CSS",
    "Modules",
    "Frontend"
  ],
  "author": "Dr. Sergey Pogodin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/birdofpreyru/react-themes/issues"
  },
  "homepage": "https://dr.pogodin.studio/docs/react-themes/index.html",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.16.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@dr.pogodin/babel-plugin-css-modules-transform": "^1.10.0",
    "babel-jest": "^27.5.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4"
  }
}
